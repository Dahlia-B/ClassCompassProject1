@page "/"

<PageTitle>ClassCompass</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
                <h1 class="display-4">
                    <span class="oi oi-compass" aria-hidden="true"></span>
                    Welcome to ClassCompass
                </h1>
                <p class="lead">Your comprehensive classroom management system</p>
                <hr class="my-4">
                <p>Manage students, teachers, and classroom activities all in one place.</p>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <span class="oi oi-people display-4 text-primary mb-3"></span>
                    <h5 class="card-title">Students</h5>
                    <p class="card-text">Manage student information, grades, and progress.</p>
                    <a href="/students" class="btn btn-primary">View Students</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <span class="oi oi-person display-4 text-success mb-3"></span>
                    <h5 class="card-title">Teachers</h5>
                    <p class="card-text">Manage teacher profiles, subjects, and assignments.</p>
                    <a href="/teachers" class="btn btn-success">View Teachers</a>
                </div>
            </div>
        </div>
    </div>
</div>
